<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VerticalSeekBar">
        <attr name="seekBarRotation">
            <!-- Clock wise - 90 deg; top = min, bottom = max -->
            <enum name="CW90" value="90" />
            <!-- Clock wise - 270 deg; bottom = min, top = max -->
            <enum name="CW270" value="270" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BarrageView">
        <attr name="frequency" format="integer" />
    </declare-styleable>

    <declare-styleable name="BlockLayout">
        <attr name="headTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="SpiderWeb">
        <attr name="dotsCount" format="dimension" />
        <attr name="lintColor" format="color" />
        <attr name="pointColor" format="color" />
        <attr name="touchPointColor" format="color" />

    </declare-styleable>

    <declare-styleable name="RoundCornerImageView">
        <attr name="radius" format="dimension"/>
        <attr name="hoverColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="EmbeddedCompassView">
        <attr name="outSideRadiusStrokerColor" format="color"/>
        <attr name="arrowColor" format="color"/>
        <attr name="stickColor" format="color"/>
        <attr name="validBeginPercent" format="float" />
    </declare-styleable>

    <declare-styleable name="MiClockView">
        <attr name="hourTextSize" format="dimension"/>
        <attr name="hourTextColor" format="color"/>
        <attr name="outSideRadiusStrokeColor" format="color"/>
        <attr name="outSideRadiusStrokeWidth" format="dimension"/>
        <attr name="secondTriangleColor" format="color"/>
        <attr name="hourMarkColor" format="color"/>
        <attr name="minuteMarkColor" format="color"/>
        <attr name="sweepStartColor" format="color"/>
        <attr name="sweepEndColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="centerCircleColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="QualCircle">
        <attr name="GradientStartColor" format="color"/>
        <attr name="GradientEndColor" format="color"/>

    </declare-styleable>
    
    <style name="VideoProgress" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/progressdrawable</item>
        <item name="android:indeterminateDrawable">@drawable/progressdrawable</item>
        <item name="android:thumb">@drawable/thumbdrawable</item>
        <item name="android:maxHeight">10dp</item>
        <item name="android:thumbOffset">0dp</item>
    </style>

    <declare-styleable name="GreenImageView">
        <attr name="GreenAppend" format="integer" />
        <attr name="age">
            <flag name="child" value="10" />
            <flag name="young" value="18" />
            <flag name="old"   value="60" />
        </attr>
        <attr name="sex">
            <enum name="man" value="0" />
            <enum name="woman" value="1" />
        </attr>
    </declare-styleable>

</resources>
