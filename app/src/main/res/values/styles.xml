<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="VerticalSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/drawable_vertical_seekbar</item>
        <item name="android:thumb">@drawable/drawable_seekbar_thumb</item>
    </style>

    <declare-styleable name="EmbeddedCompassView">
        <attr name="outSideRadiusStrokerColor" format="color"/>
        <attr name="arrowColor" format="color"/>
        <attr name="stickColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="MiClockView">
        <attr name="hourTextSize" format="dimension"/>
        <attr name="hourTextColor" format="color"/>
        <attr name="outSideRadiusStrokeColor" format="color"/>
        <attr name="outSideRadiusStrokeWidth" format="dimension"/>
        <attr name="secondTriangleColor" format="color"/>
        <attr name="hourMarkColor" format="color"/>
        <attr name="minuteMarkColor" format="color"/>
        <attr name="sweepStartColor" format="color"/>
        <attr name="sweepEndColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="centerCircleColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="QualCircle">
        <attr name="GradientStartColor" format="color"/>
        <attr name="GradientEndColor" format="color"/>

    </declare-styleable>

    <declare-styleable name="RoundCornerImageView">
        <attr name="radius" format="dimension"/>
        <attr name="hoverColor" format="color"/>
    </declare-styleable>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/loading_dialogfragment_rotation</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <!--<item name="android:fromDegrees">0</item>-->
        <!--<item name="android:toDegrees">360</item>-->

    </style>

    <declare-styleable name="SpiderWeb">
        <attr name="dotsCount" format="dimension" />
        <attr name="lintColor" format="color" />
        <attr name="pointColor" format="color" />
        <attr name="touchPointColor" format="color" />

    </declare-styleable>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
