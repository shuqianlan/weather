<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ilifesmart.layout.AbstractActivity">

    <include layout="@layout/layout_fold_item_arrow"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewStub_test"
        android:text="ViewStub"
        />

    <ViewStub
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/view_stub"
        android:id="@+id/viewStub"
        android:layout="@layout/layout_fold_item_arrow"
        />
</LinearLayout>
