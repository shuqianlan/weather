<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ilifesmart.HomeActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/barrage"
                android:text="弹幕"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/custom_surfaceview"
                android:text="SurfaceView"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/span_text"
                android:text="富文本"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/weather"
                android:text="Weather"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/seekbar"
                android:text="SeekBar"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/notification"
                android:text="notification"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/rotate"
                android:text="Rotate3D"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/aop_test"
                android:text="AOP"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/thread_test"
                android:text="Thread"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/framelayout"
                android:text="FrameLayout"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/compass"
                android:text="Compass"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/miclock"
                android:text="MiClock"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/camrotate"
                android:text="cam-rotate"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/path"
                android:text="Path"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/osinfo"
                android:text="OS"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/viewpager"
                android:text="ViewPager"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/mapper"
                android:text="Mapper"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/dialog"
                android:text="Dialog"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/preference"
                android:text="preference"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/nature_ui"
                android:text="Nature_UI"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/spider_web"
                android:text="蛛网"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/mvvm"
                android:visibility="gone"
                android:text="MVVM"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/rxjava"
                android:text="RxJava"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/progress"
                android:text="窗帘百分比"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/ViewGroup"
                android:text="自定义容器"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/live"
                android:text="进程保活"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/curtain"
                android:text="Nature Curtain"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/bluetooth"
                android:text="BLE"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/fold"
                android:text="fold"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/stroke_background"
                android:id="@+id/region"
                android:text="Region"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>