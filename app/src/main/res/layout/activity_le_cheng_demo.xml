<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context="com.imou.LeChengDemoActivity">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/lecheng_login"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintVertical_bias="0.3">
        <TableRow>
            <Button
                    android:id="@+id/login_admin"
                    android:layout_weight="1"
                    android:text="@string/lecheng_login_admin"
                    android:background="@drawable/lecheng_button_state"
                    android:textColor="@android:color/black"
            />
            <Button
                    android:id="@+id/login_user"
                    android:layout_weight="1"
                    android:text="@string/lecheng_login_user"
                    android:background="@drawable/lecheng_button_state"
                    android:textColor="@android:color/black"
            />
        </TableRow>
    </TableLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/style_admin"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/lecheng_login"
            app:layout_constraintStart_toStartOf="@id/lecheng_login"
            app:layout_constraintEnd_toEndOf="@id/lecheng_login"
            app:layout_constraintDimensionRatio="H,1:1"
    >
        
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/style_admin_mobile"
                android:hint="@android:string/emptyPhoneNumber"
                android:inputType="phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/style_admin_submit"
                android:text="@android:string/ok"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/style_user"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/lecheng_login"
            app:layout_constraintStart_toStartOf="@id/lecheng_login"
            app:layout_constraintEnd_toEndOf="@id/lecheng_login"
            app:layout_constraintDimensionRatio="H,4:3"
            android:paddingHorizontal="6dp"
    >

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/style_user_mobile"
                android:hint="@android:string/emptyPhoneNumber"
                android:inputType="phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.4"
        />

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/style_user_smsCode"
                app:layout_constraintTop_toBottomOf="@id/style_user_mobile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/send_message"
                app:layout_constraintHorizontal_chainStyle="packed"
        />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/send_message"
                android:text="发送验证码"
                app:layout_constraintTop_toBottomOf="@id/style_user_mobile"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/style_user_submit"
                android:text="@android:string/ok"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
