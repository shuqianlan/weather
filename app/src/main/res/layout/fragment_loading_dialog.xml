<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/dialog_cont"
                                                   android:background="@android:color/darker_gray"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ProgressBar
        android:id="@+id/loading"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminateDrawable="@drawable/loading_dialogfragment_rotation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_dialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waiting"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@id/loading"
        app:layout_constraintTop_toTopOf="@id/loading"
        app:layout_constraintBottom_toBottomOf="@id/loading"
    />
</androidx.constraintlayout.widget.ConstraintLayout>